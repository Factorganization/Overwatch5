.container{
    flex-grow: 1;
    width: auto;
    height: auto;
    max-width: none;
    max-height: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    -unity-font-definition: url('/Assets/TextMesh Pro/Fonts/LiberationSans.ttf');
    text-shadow: 2px 2px 2px rgba(0,0,0,0.5);
    color: rgb(255,197,0);
}

.inventory{
    background-image: url("/Assets/Textures/PlaceHolders/UI board Large  parchment.png");
    position: absolute;
    bottom: 30;
    align-self: center;
    width: 500px;
    padding: 15px;
    max-height: 75px;
}

