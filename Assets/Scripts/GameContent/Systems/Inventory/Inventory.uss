.slotsContainer {
    flex-grow: 1;
    top: -15;
    padding-top: 15px;
    flex-wrap: wrap;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
    flex-shrink: 0;
}

.slot{
    width: 45px;
    height: 45px;
    margin: 2px;
}

.slotFrame
{
    position: absolute;
    top: 0;
    left: 15px;
    width: 45px;
    height: 45px;
    border-width: 0;
    background-image: url("/Assets/Textures/PlaceHolders/Steampunk_UI_Frames_3.png");
    -unity-slice-scale: 0.4;
}

.slotIcon{
    padding: 2px;
    left: 15px;
    flex-shrink: 0;
    flex-grow: 1;
}

.stackCount{
    position: absolute;
    color: white;
    bottom: -8px;
    right: -5px;
    font-size: 18px;
}

.ghostIcon{
    visibility: hidden;
    position: absolute;
    padding: 12px;
    flex-shrink: 0;
    flex-grow: 1;
}

